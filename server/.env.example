# Backend environment variables
# Copy this file to .env and fill in real values.

PORT=5000
MONGODB_URI=mongodb+srv://<user>:<pass>@cluster0.example.mongodb.net/vema
JWT_SECRET=change_this_to_a_long_random_secret

# Email config — SendGrid (used for notifications + forgot-password)
# Create an API key in SendGrid and verify the sender address used in SENDGRID_FROM.
SENDGRID_API_KEY=SG.xxxxx
SENDGRID_FROM=Vignan Society <noreply@yourdomain.com>

# Admin inbox (used for credentials summary and as fallback for forgot-password when an employee has no email)
ADMIN_EMAIL=admin@yourdomain.com

# Frontend URL — used in password-reset links
CLIENT_URL=http://localhost:5173
